<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"  xmlns:local="*" horizontalGap="10">
<mx:Script>
	<![CDATA[
		[Bindable]
		private var a:Number = 2000;
		[Bindable]
		private var b:Number = 4000;
		[Bindable]
		private var n:Number = 2;
		[Bindable]
		private var m:Number = 3;
		public function f(x:Number):Number {
			return -(a / Math.pow(x, n)) + (b / Math.pow(x, m));
		}
		public function draw():void {
			var ofX:Number = can.width/2
			var ofY:Number = can.height/2
			var sX:Number = 0
			var eX:Number = 200
			var step:Number = 1
			with(can.graphics) {
				clear();
				lineStyle(1,0);
				moveTo(0,ofY);
				lineTo(can.width,ofY);
				moveTo(ofX,0);
				lineTo(ofX,can.height);
				//
				moveTo(sX+ofX, f(sX)+ofY)
				for(var x:Number = sX; x<eX; x+=step){
					lineTo(x+ofX, f(x)+ofY)
				}
			}
		}
	]]>
</mx:Script>
	<mx:Canvas id="can" width="100%" height="100%">
		
	</mx:Canvas>
	<mx:ApplicationControlBar width="100%" verticalAlign="middle" horizontalAlign="center">
		<mx:VSlider maximum="5000" height="100" id="a_s" value="{a}" change="a = event.target.value, draw()"/>
		<mx:VSlider maximum="5000" height="100" id="b_s" value="{b}" change="b = event.target.value, draw()"/>
		<mx:VSlider height="100" id="n_s" value="{n}" change="n = event.target.value, draw()"/>
		<mx:VSlider height="100" id="m_s" value="{m}" change="m = event.target.value, draw()"/>
	</mx:ApplicationControlBar>
</mx:Application>
